---
import { Code } from 'astro:components';

const code = `// cmd/app/main.go â€” Wire modules at boot
k, _ := kernel.NewKernel("config/config.toml",
    kernel.WithRouter(chiRouter.New()),
    kernel.WithDatabase(db),
    kernel.WithCache(cache),
    kernel.WithMailer(mailer),
    kernel.WithStorage(storage),
)

k.Register(authmod.New())     // identity, login, OAuth
k.Register(rbacmod.New())     // roles & permissions
k.Register(tenantmod.New())   // multi-tenancy
k.Register(billingmod.New())  // subscriptions & invoicing

k.Boot() // resolves deps, runs migrations, wires events`;
---

<section class="code-section">
  <div class="container reveal">
    <p class="code-label">// See it in action</p>
    <Code code={code} lang="go" theme="one-dark-pro" />
  </div>
</section>
