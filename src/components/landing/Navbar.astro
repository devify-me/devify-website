---
import logoSvg from '../../assets/branding/devify-hz-colorFont.svg';
---

<nav class="nav" id="navbar">
  <div class="nav-inner">
    <a href="/">
      <img src={logoSvg.src} alt="Devify" class="nav-logo" />
    </a>
    <ul class="nav-links">
      <li><a href="#features">Features</a></li>
      <li><a href="#architecture">Architecture</a></li>
      <li><a href="#modules">Modules</a></li>
      <li><a href="#cli">CLI</a></li>
      <li><a href="/getting-started/installation/" class="nav-cta">Get Started</a></li>
    </ul>
    <button class="nav-mobile-toggle" aria-label="Toggle menu">&#9776;</button>
  </div>
</nav>

<script>
  const nav = document.getElementById('navbar');
  if (nav) {
    window.addEventListener('scroll', () => {
      nav.classList.toggle('scrolled', window.scrollY > 20);
    }, { passive: true });
  }
</script>
